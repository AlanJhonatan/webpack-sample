{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "target": "ES6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
}
